{
  // Required
  "manifest_version": 2,
  "name": "Youtube Live Chat : Troll Starver",
  "version": "1.0",

  // Recommended
  "default_locale": "en",
  "description": "This extension doesn't show comments from people you don't feel like putting up with in live stream comments box.",

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": {                    // optional
      "38": "images/trollx38.png"           // optional
    },
    "default_title": "Browser Action"      // optional; shown in tooltip
  },

  "content_scripts": [

  ],

  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "http://www.youtube.com/*",
    "http://www.youtube.com/*",
    "http://*/*",
    "https://*/*"
  ],

  "web_accessible_resources": [
    "images/*"
    // "style/double-rainbow.css",
    // "script/double-rainbow.js",
    // "script/main.js",
    // "templates/*"
  ]
}




